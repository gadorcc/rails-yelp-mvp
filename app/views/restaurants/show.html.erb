<div class="container mt-5">
  <h3><%= @restaurant.name %> </h3>
  <p>Address: <%= @restaurant.address %></p>
      <p>Phone Number: <%= @restaurant.phone_number %></p>
      <p>Category: <%= @restaurant.category.capitalize %></p>

<hr></hr>
<p><strong>Reviews</strong></p>
<ul class="list-group">
  <% @restaurant.reviews.each do |review| %>
    <li class="list-group-item">Rating: <%= review.rating %> Comment: <%= review.content %></li>
  <% end %>
</ul>
<br>
<hr></hr>
<%= link_to 'Add a review', new_restaurant_review_path(@restaurant) %>
<hr></hr>
<%= link_to 'Back to all the restaurants', restaurants_path %>

</div>
